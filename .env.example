# Tribal EHR Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_USER=ehr_admin
POSTGRES_DB=tribal_ehr

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=generate_a_secure_random_string_here
JWT_REFRESH_SECRET=generate_another_secure_random_string_here

# Session encryption key (32 bytes hex)
SESSION_SECRET=generate_a_32_byte_hex_string_here

# =============================================================================
# API CONFIGURATION  
# =============================================================================
API_PORT=3001
API_BASE_URL=http://localhost:3001
NODE_ENV=development

# =============================================================================
# FHIR SERVER
# =============================================================================
FHIR_SERVER_URL=http://localhost:8080/fhir

# =============================================================================
# REDIS (Optional - for session caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# OAUTH CLIENTS (for SMART on FHIR)
# =============================================================================
# Generate secure secrets for each OAuth client
OAUTH_BULK_CLIENT_SECRET=generate_secure_secret_here

# =============================================================================
# ENCRYPTION
# =============================================================================
# 32-byte hex key for encrypting PHI at rest
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=generate_64_char_hex_string_here

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# SMTP for email notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=

# Twilio for SMS (Optional)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=
